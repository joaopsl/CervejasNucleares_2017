record(calc, "$(user):CalcInt"){
        field(DESC, "calcula o valor do integral") 
	field(FLNK, "$(user):CalcPID PP NMS")
        field(CALC, "  A+B*C")
        field(INPA, "$(user):CalcInt.VAL  NPP NMS")
        field(INPB, "$(user):Terror.VAL")
#        field(INPC, "$(user):Period.VAL")
        field(INPC, "2")
	field(PREC, "2")
        field(EGU, "DegC")
	field(ADEL, "1")
}
 
