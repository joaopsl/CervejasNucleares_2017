record(calc, "$(user):CalcPID"){
        field(DESC, "calcula o valor do atuador") 
        field(CALC, "  A*B + C*D + E")
        field(INPA, "$(user):Kp.VAL  NMS")
        field(INPB, "$(user):Terror.VAL NMS ")
        field(INPC, "$(user):Ki.VAL NMS ")
	field(INPD, "$(user):CalcInt.VAL NMS")
	field(INPE, "200")
	field(FLNK, "$(user):DutyCycle PP NMS")
	#field(DRVL, "0")
	#field(DRVH,"1000")
	field(ADEL, "1")
}

record(calcout, "$(user):ResetCycle"){

	field(DESC, "Recomeça um ciclo")
	field(DTYP, "stream")
	field(CALC, "0")
	field(OUT, "@arduino.proto reset() $(PORT)")
	field(ASG, "critical")
	field(VAL, "0")
	field(OOPT, "On Change")
}

record(compress, "$(user):TAverage"){
	field(DESC, "Calcula a media de Tfrigo")
	field(INP,"$(user):CircularBuffer")
	field(ALG,"N to 1 Average")
	field(N,"30")
	field(NSAM,"1")
	field(EGU,"DegC")
	field(HOPR,"25")
	field(LOPR,"10")
	field(PREC, "2")
}

record(compress,"$(user):CircularBuffer"){
	field(DESC, "Cria um buffer circular")
	field(INP,"$(user):Tfrigo.VAL NMS")
	field(ALG,"Circular Buffer")
	field(NSAM,"30")
	field(FLNK,"$(user):TAverage")
}
